      <layer3>
        <ipv6>
          <neighbor-discovery>
            <router-advertisement>
              <enable>no</enable>
            </router-advertisement>
          </neighbor-discovery>
          <address>
            <entry name="{{ insert_your_IPv6_address }}">
              <advertise>
                <enable>no</enable>
                <valid-lifetime>2592000</valid-lifetime>
                <preferred-lifetime>604800</preferred-lifetime>
                <onlink-flag>yes</onlink-flag>
                <auto-config-flag>yes</auto-config-flag>
              </advertise>
              <enable-on-interface>yes</enable-on-interface>
            </entry>
          </address>
        </ipv6>
        <ndp-proxy>
          <enabled>no</enabled>
        </ndp-proxy>
        <lldp>
          <enable>no</enable>
        </lldp>
      </layer3>